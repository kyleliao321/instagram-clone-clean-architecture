<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.instagram_clone_clean_architecture.feature.profile.presentation.view.post.ProfilePostViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="@{viewModel.stateLiveData.postLoading || viewModel.stateLiveData.profileLoading ? View.GONE : View.VISIBLE}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/post_info_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/info_post_image_divider">

            <ImageView
                android:id="@+id/post_user_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@+id/post_info_container"
                app:layout_constraintEnd_toStartOf="@+id/post_user_image_user_name_divider"
                android:src="@drawable/user_profile_default_image" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/post_user_image_user_name_divider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".15" />

            <TextView
                android:id="@+id/post_user_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/post_info_container"
                app:layout_constraintBottom_toTopOf="@+id/user_name_post_location_divider"
                app:layout_constraintStart_toEndOf="@+id/post_user_image_user_name_divider"
                app:layout_constraintEnd_toEndOf="@+id/post_info_container"
                android:text="@{viewModel.stateLiveData.userProfile.userName}" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/user_name_post_location_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".5" />

            <TextView
                android:id="@+id/post_location"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/user_name_post_location_divider"
                app:layout_constraintBottom_toBottomOf="@+id/post_info_container"
                app:layout_constraintStart_toEndOf="@+id/post_user_image_user_name_divider"
                app:layout_constraintEnd_toEndOf="@+id/post_info_container"
                android:text="@{viewModel.stateLiveData.post.location}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/info_post_image_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".15"/>

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@+id/info_post_image_divider"
            app:layout_constraintBottom_toTopOf="@+id/post_image_post_action_divider"
            app:postImage="@{viewModel.stateLiveData.post.imageSrc}"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/post_image_post_action_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".7"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/post_action_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/post_image_post_action_divider"
            app:layout_constraintBottom_toTopOf="@+id/post_action_post_description_divider">

            <ImageView
                android:id="@+id/like_post_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@{viewModel.isLoginUserLikedPost() ? @drawable/post_like_button_liked  : @drawable/post_like_button_default}"
                android:onClick="@{() -> viewModel.onLikeButtonClicked()}"
                app:layout_constraintTop_toTopOf="@+id/post_action_container"
                app:layout_constraintBottom_toTopOf="@+id/post_action_post_like_number_divider"
                app:layout_constraintStart_toStartOf="@+id/post_action_container" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/post_action_post_like_number_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".65" />

            <TextView
                android:id="@+id/post_like_number"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/post_action_post_like_number_divider"
                app:layout_constraintBottom_toBottomOf="@+id/post_action_container"
                app:layout_constraintStart_toStartOf="@+id/post_action_container"
                android:text="@{Integer.toString(viewModel.stateLiveData.likedUsers.size()) + ` liked`}" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/post_action_post_description_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".85" />

        <TextView
            android:id="@+id/post_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:lines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:ellipsize="end"
            android:text="@{viewModel.stateLiveData.post.description}"
            app:layout_constraintTop_toBottomOf="@id/post_action_post_description_divider"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>