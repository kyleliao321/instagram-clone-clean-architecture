<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="post"
            type="com.example.instagram_clone_clean_architecture.app.domain.model.PostDomainModel" />
    </data>



    <ImageView
        android:id="@+id/user_post_image_preview"
        android:layout_width="@dimen/user_post_item_size"
        android:layout_height="@dimen/user_post_item_size"
        android:layout_margin="@dimen/user_post_item_margin"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:postImage="@{post.imageSrc}"/>

</layout>