<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_profile_image_shimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/user_edit_image_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/user_image_name_divider_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/user_profile_image_background_shape" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/user_image_name_divider_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3" />

    <TextView
        android:id="@+id/user_profile_name_edit_text_container_shimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/backgroundColor"
        android:layout_marginVertical="@dimen/user_edit_element_vertical_margin"
        android:layout_marginHorizontal="@dimen/user_edit_element_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/user_image_name_divider_shimmer"
        app:layout_constraintBottom_toTopOf="@+id/user_name_name_divider_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

   <androidx.constraintlayout.widget.Guideline
        android:id="@+id/user_name_name_divider_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".4" />

    <TextView
        android:id="@+id/user_profile_user_name_shimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/backgroundColor"
        android:layout_marginVertical="@dimen/user_edit_element_vertical_margin"
        android:layout_marginHorizontal="@dimen/user_edit_element_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/user_name_name_divider_shimmer"
        app:layout_constraintBottom_toTopOf="@+id/name_description_divider_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/name_description_divider_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5" />

    <TextView
        android:id="@+id/user_profile_description_shimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/user_edit_element_vertical_margin"
        android:layout_marginHorizontal="@dimen/user_edit_element_horizontal_margin"
        android:background="?attr/backgroundColor"
        app:layout_constraintTop_toBottomOf="@+id/name_description_divider_shimmer"
        app:layout_constraintBottom_toTopOf="@+id/description_end_guideline_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/description_end_guideline_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".7" />

</androidx.constraintlayout.widget.ConstraintLayout>